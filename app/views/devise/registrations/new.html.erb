<div class="container">
      <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :nombre %>

        <%= f.text_field :name, autofocus: true, autocomplete: "nombre", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label 'Edad' %>
        <%= f.text_field :age, autofocus: true, autocomplete: "edad", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label 'Rut' %>
        <%= f.text_field :rut, autofocus: true, autocomplete: "rut", maxlength: "9", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label 'Teléfono' %>
        <%= f.telephone_field :cellphone, autofocus: true, autocomplete: "Telefono", maxlength: "9",  class: "form-control" %>
      </div>

      <input type="radio" name="user[role]" value="empleado" checked="true"> Trabajador<br>
      <input type="radio" name="user[role]" value="empleador"> Empleador<br>


      <div class="field form-group">
        <%= f.label 'Email' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label 'Contraseña' %>
        <% if @minimum_password_length %>
        <em>(minímo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label 'Confirmar contraseña' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
</div>
