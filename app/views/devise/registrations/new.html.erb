<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :nombre %>
        <%= f.text_field :email, autofocus: true, autocomplete: "nombre", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :edad%>
        <%= f.text_field :age, autofocus: true, autocomplete: "edad", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :rut %>
        <%= f.text_field :rut, autofocus: true, autocomplete: "rut", class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :telefono %>
        <%= f.telephone_field :cellphone, autofocus: true, autocomplete: "Telefono", class: "form-control" %>
      </div>

      <input type="radio" name="user[rol]" value="0"> Trabajador<br>
      <input type="radio" name="user[rol]" value="1"> Empleador<br>


      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label 'Contraseña' %>
        <% if @minimum_password_length %>
        <em>(minímo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label 'Confirmar contraseña' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
